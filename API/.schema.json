db.createCollection("Mentor", {
   validator: {
      $jsonSchema: {
         bsonType: "object",
         required: [ "fname", "lname", "phone", "email", "language"],
         properties: {
            name: {
               bsonType: "string",
               description: "Must be characters and is required"
            },
            phone: {
               bsonType: "int",
               minimum: 0000000000,
               maximum: 9999999999,
               exclusiveMaximum: true,
               description: "must be a phone number and is required"
            },
            email: {
               bsonType: "string",
               description: "must be an email and is not required"
            },
            language: {
               bsonType: "string",
               description: "must be a string and is required"
            },
            location: {
               bsonType: "string",
               description: "must be a name and is required"
            },
            experience: {
               bsonType: "int",
               description: "must be a number and is requried"
            },
            preferred_platform: {
               bsonType: "string",
               description: "must be a name"
            },
            bio: {
               bsonType: "string",
               description: "must be a string"
            },
                    
            expertise: {
               bsonType: "string",
               description: "must be a string"
            }
         }
      }
   }
})

